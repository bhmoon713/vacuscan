<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_box_bot">


  <!-- Materials -->
  <material name="blue">
    <color rgba="0.006 0.151 0.581 1"/>
  </material>

  <material name="white">
    <color rgba="1.0 0.91 0.827 1"/>
  </material>

  <material name="green">
    <color rgba="0.0 0.6 0.2 1"/>
  </material>

  <material name="red">
    <color rgba="0.8 0.1 0.1 1"/>
  </material>

  <material name="yellow">
    <color rgba="1.0 0.85 0.1 1"/>
  </material>

  <material name="gray">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>

  <material name="purple">
    <color rgba="0.5 0.1 0.6 1"/>
  </material>

  <!-- ==================== base_link ==================== -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- 0.8 x 1.0 x 0.1 (w x d x h) -->
        <box size="0.8 1.0 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.8 1.0 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- From box inertia formulas -->
      <inertia
        ixx="0.0100" ixy="0.0" ixz="0.0"
        iyy="0.0065" iyz="0.0"
        izz="0.0133"/>
    </inertial>
  </link>

  <gazebo reference="base_link">
    <kp>500000</kp>
    <kd>100</kd>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <material>Gazebo/Blue</material>
  </gazebo>

  <!-- ==================== left rail ==================== -->
  <link name="rail_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- 0.1 x 1.0 x 0.1 -->
        <box size="0.1 1.0 0.1"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 1.0 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- 0.1 x 1.0 x 0.1 box -->
      <inertia
        ixx="0.00417" ixy="0.0" ixz="0.0"
        iyy="0.00083" iyz="0.0"
        izz="0.00417"/>
    </inertial>
  </link>

  <joint name="base_link_to_rail_left_link_joint" type="fixed">
    <origin xyz="0.5 0 0.0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="rail_left_link"/>
  </joint>

  <gazebo reference="rail_left_link">
    <kp>500000</kp>
    <kd>100</kd>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <material>Gazebo/Red</material>
  </gazebo>

  <!-- ==================== left mount (prismatic) ==================== -->
  <link name="mount_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.02"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.000033"  ixy="0.0" ixz="0.0"
      iyy="0.000033"  iyz="0.0"
      izz="0.000167"/>
    </inertial>
  </link>

  <joint name="y_control_joint" type="prismatic">
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
    <parent link="rail_left_link"/>
    <child link="mount_left_link"/>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="0.2" lower="-0.45" upper="0.2"/>
    <dynamics damping="5.0" friction="1.0"/>
  </joint>

  <!-- ==================== right rail ==================== -->
  <link name="rail_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- 0.1 x 1.0 x 0.1 -->
        <box size="0.1 1.0 0.1"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 1.0 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00417" ixy="0.0" ixz="0.0"
        iyy="0.00083" iyz="0.0"
        izz="0.00417"/>
    </inertial>
  </link>

  <joint name="base_link_to_rail_right_link_joint" type="fixed">
    <origin xyz="-0.5 0 0.0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="rail_right_link"/>
  </joint>

  <gazebo reference="rail_right_link">
    <kp>500000</kp>
    <kd>100</kd>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <material>Gazebo/Red</material>
  </gazebo>

  <!-- ==================== right mount (rigid to left mount) ==================== -->
  <link name="mount_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.02"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.000033"  ixy="0.0" ixz="0.0"
      iyy="0.000033"  iyz="0.0"
      izz="0.000167"/>
    </inertial>
  </link>

  <!-- Right mount is rigidly attached relative to left mount -->
  <joint name="mount_left_link_to_mount_right_link_joint" type="fixed">
    <!-- 1.0 m offset in X from left mount -->
    <origin xyz="-1.0 0 0" rpy="0 0 0"/>
    <parent link="mount_left_link"/>
    <child link="mount_right_link"/>
  </joint>

  <!-- ==================== center rail ==================== -->
  <link name="rail_center_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- 1.1 x 0.1 x 0.1 -->
        <box size="1.1 0.1 0.1"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1.1 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.000183" ixy="0.0" ixz="0.0"
        iyy="0.00092" iyz="0.0"
        izz="0.00092"/>
    </inertial>
  </link>

  <joint name="mount_left_link_to_rail_center_link_joint" type="fixed">
    <origin xyz="-0.5 0 0.06" rpy="0 0 0"/>
    <parent link="mount_left_link"/>
    <child link="rail_center_link"/>
  </joint>

  <gazebo reference="rail_center_link">
    <material>Gazebo/Red</material>
  </gazebo>

  <!-- ==================== center mount (X prismatic) ==================== -->
  <link name="mount_center_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- 0.2 x 0.02 x 0.1 -->
        <box size="0.2 0.02 0.1"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.02 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.000017" ixy="0.0" ixz="0.0"
        iyy="0.00017" iyz="0.0"
        izz="0.000153"/>
    </inertial>
  </link>

  <joint name="x_control_joint" type="prismatic">
    <origin xyz="0 0.06 0" rpy="0 0 0"/>
    <parent link="rail_center_link"/>
    <child link="mount_center_link"/>
    <axis xyz="1 0 0"/>
    <limit effort="100" velocity="0.2" lower="-0.16" upper="0.16"/>
    <dynamics damping="5.0" friction="1.0"/>
  </joint>

  <!-- ==================== wafer holder ==================== -->
  <link name="wafer_holder_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- 0.4 x 0.4 x 0.01 -->
        <box size="0.4 0.4 0.01"/>
      </geometry>
      <material name="yellow"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.4 0.4 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.00017" ixy="0.0" ixz="0.0"
        iyy="0.00017" iyz="0.0"
        izz="0.00533"/>
    </inertial>
  </link>

  <joint name="mount_center_link_to_wafer_holder_link_joint" type="fixed">
    <origin xyz="0 0.2 -0.045" rpy="0 0 0"/>
    <parent link="mount_center_link"/>
    <child link="wafer_holder_link"/>
  </joint>

  <gazebo reference="wafer_holder_link">
    <material>Gazebo/Yellow</material>
  </gazebo>

  <!-- ==================== joint_state + ros2_control (unchanged) ==================== -->

  <gazebo>
    <plugin name="vacuscan_bot_joint_state" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
        <remapping>~/out:=joint_states</remapping>
      </ros>
      <update_rate>30</update_rate>
      <joint_name>y_control_joint</joint_name>
      <joint_name>x_control_joint</joint_name>
    </plugin>
  </gazebo>

  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>

    <joint name="y_control_joint">
      <command_interface name="position">
        <param name="min">-0.45</param>
        <param name="max">0.2</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>


  <joint name="x_control_joint">
    <command_interface name="position">
      <param name="min">-0.16</param>
      <param name="max">0.16</param>
    </command_interface>
    <state_interface name="position"/>
    <state_interface name="velocity"/>
    <state_interface name="effort"/>
  </joint>

  </ros2_control>

  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <!-- Keep your existing controller YAML path -->
      <parameters>$(find vacuscan_description)/config/controller_position.yaml</parameters>
      <robot_param_node>/vacuscan_bot_state_publisher_node</robot_param_node>
    </plugin>
  </gazebo>

    
    <!-- *********************** CAMERA SETUP *********************************  -->
    <!-- Each sensor must be attached to a link.                              --> 
    <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.0 0.0 1.2" rpy="0 1.57 0"/>
    </joint>
    <link name="camera_link"/>


    <gazebo reference="camera_link">
        <sensor name="camera" type="camera">
            <update_rate>30.0</update_rate>
            <always_on>1</always_on>
            <visualize>true</visualize>        
            <camera name="camera">
                <horizontal_fov>1.3962634</horizontal_fov>
                <image>
                    <width>480</width>
                    <height>360</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <!-- distance described in meters -->
                    <near>0.01</near>
                    <far>20</far>
                </clip>
                <distortion>
                    <k1>0.0</k1>
                    <k2>0.0</k2>
                    <k3>0.0</k3>
                    <p1>0.0</p1>
                    <p2>0.0</p2>
                    <center>0.5 0.5</center>
                </distortion>
            </camera>
            <plugin filename="libgazebo_ros_camera.so" name="camera_controller">
            <ros>
                <remapping>~/image_raw:=camera/image_raw</remapping>
                <remapping>~/camera_info:=camera/camera_info</remapping>
            </ros>
            <camera_name>camera_low</camera_name>
            <frame_name>camera_link</frame_name>
            </plugin>
        </sensor>
    </gazebo>


    <!-- *********************** CAMERA2 SETUP *********************************  -->
    <!-- Each sensor must be attached to a link. --> 
    <joint name="camera2_joint" type="fixed">
      <parent link="base_link"/>
      <child link="camera2_link"/>
      <!-- x y z (meters), r p y (radians) -->
      <origin xyz="-0.8 0.0 0.8" rpy="0 0.785 0"/>
    </joint>

    <link name="camera2_link"/>

    <gazebo reference="camera2_link">
      <sensor name="camera2" type="camera">
        <update_rate>30.0</update_rate>
        <always_on>1</always_on>
        <visualize>true</visualize>

        <camera name="camera2">
          <horizontal_fov>1.3962634</horizontal_fov>
          <image>
            <width>480</width>
            <height>360</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.01</near>
            <far>20</far>
          </clip>
          <distortion>
            <k1>0.0</k1>
            <k2>0.0</k2>
            <k3>0.0</k3>
            <p1>0.0</p1>
            <p2>0.0</p2>
            <center>0.5 0.5</center>
          </distortion>
        </camera>

        <plugin filename="libgazebo_ros_camera.so" name="camera2_controller">
          <ros>
            <!-- optional namespace
            <namespace>/vacuscan</namespace>
            -->
            <!-- Remap default ~/image_raw and ~/camera_info to unique topics -->
            <remapping>~/image_raw:=/camera2/image_raw</remapping>
            <remapping>~/camera_info:=/camera2/camera_info</remapping>
          </ros>
          <camera_name>camera_low2</camera_name>
          <frame_name>camera2_link</frame_name>
        </plugin>
      </sensor>
    </gazebo>



    <!-- *********************** Laser scanner *********************************  -->
    <!-- Each sensor must be attached to a link.                              --> 
    <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin xyz="0.0 0.0 1.5" rpy="1.57 0 0"/>
    </joint>
    <link name="laser_link"/>


    <!-- laser Sensors -->
    <gazebo reference="laser_link">
      <sensor name="sensor_ray" type="ray">
          <pose>0 0 0 0 0 0</pose>
          <ray>
            <scan>
              <horizontal>
                <samples>200</samples>
                <resolution>1.0</resolution>
                <min_angle>-2.02</min_angle>
                <max_angle>-1.12</max_angle>
              </horizontal>
            </scan>
            <range>
              <min>0.1</min>
              <max>5.0</max>
            </range>
          </ray>
          <always_on>true</always_on>
          <visualize>true</visualize>
          <update_rate>100.0</update_rate>
          <plugin name="laser" filename="libgazebo_ros_ray_sensor.so">
            <ros>
              <namespace>/vacuscan</namespace>
              <remapping>~/out:=laser_scan</remapping>
            </ros>
            <output_type>sensor_msgs/LaserScan</output_type>
            <frame_name>laser_link</frame_name>
          </plugin>
        </sensor>
    </gazebo>
</robot>
